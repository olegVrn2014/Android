<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".runWidgets.RunAutoCompleteTextView">

    <AutoCompleteTextView
        android:id="@+id/text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10sp"
        android:completionThreshold="1"
        android:hint="Введите название города" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30sp"
        android:layout_margin="10sp"
        android:textSize="20sp"
        android:textColor="@color/red"
        android:text="Введите город из списка:\nМосква, Санкт-Петербург, Милан, Барселона, Дубай, Египет, Нью-Йорк, Мадрид, Венеция, Берлин, Лас-Вегас"/>

</LinearLayout>