<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".intents.PassDataBetweenActivity">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:ignore="MissingConstraints">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="25dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:fontFamily="@font/coda"
                android:text="@string/activity_main_xml"
                android:gravity="center_horizontal"
                android:textColor="@color/black"
                android:textSize="24sp" />

            <com.zolad.zoominimageview.ZoomInImageView
                android:id="@+id/imageXML"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:fontFamily="@font/coda"
                android:text="@string/mainActivity_java"
                android:gravity="center_horizontal"
                android:textColor="@color/black"
                android:textSize="24sp" />

            <com.zolad.zoominimageview.ZoomInImageView
                android:id="@+id/imageActivity"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:fontFamily="@font/coda"
                android:text="Создаём вторую активность"
                android:gravity="center_horizontal"
                android:textColor="@color/black"
                android:textSize="24sp" />

            <com.zolad.zoominimageview.ZoomInImageView
                android:id="@+id/imageCreateSecondActivity1"
                android:layout_width="match_parent"
                android:layout_marginBottom="15sp"
                android:layout_height="wrap_content"/>

            <com.zolad.zoominimageview.ZoomInImageView
                android:id="@+id/imageCreateSecondActivity2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:fontFamily="@font/coda"
                android:text="activity_second.xml"
                android:gravity="center_horizontal"
                android:textColor="@color/black"
                android:textSize="24sp" />

            <com.zolad.zoominimageview.ZoomInImageView
                android:id="@+id/imageActivitySecondXml"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:fontFamily="@font/coda"
                android:text="SecondActivity.java"
                android:gravity="center_horizontal"
                android:textColor="@color/black"
                android:textSize="24sp" />

            <com.zolad.zoominimageview.ZoomInImageView
                android:id="@+id/imageSecondActivityJava"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>




        </LinearLayout>


    </ScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>