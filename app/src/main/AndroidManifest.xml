<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="ru.developer.android">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.AndroidApp">
        <activity android:name=".runWidgets.RunToggle"></activity>
        <activity android:name=".widgets.ToggleActivity" />
        <activity android:name=".runWidgets.RunButton" />
        <activity android:name=".widgets.ButtonActivity" />
        <activity
            android:name=".runWidgets.RunEditText"
            android:screenOrientation="portrait" />
        <activity
            android:name=".widgets.EditTextActivity"
            android:screenOrientation="portrait">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".widgets.WidgetsMain" />
        </activity>
        <activity
            android:name=".runWidgets.RunTextView"
            android:screenOrientation="portrait" />
        <activity
            android:name=".widgets.TextViewActivity"
            android:screenOrientation="portrait">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".widgets.WidgetsMain" />
        </activity>
        <activity
            android:name=".widgets.WidgetsMain"
            android:screenOrientation="portrait">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".MainActivity" />
        </activity>
        <activity
            android:name=".MainActivity"
            android:launchMode="singleTop"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>